<!--================ start banner Area =================-->
<section class="home-banner-area relative" id="home" data-parallax="scroll" data-image-src='../Content/images/family.jpeg'>
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen justify-content-lg-end">
            <div class="banner-content col-lg-7" id="homeBanner">
                <h1 data-aos="fade-up" style="font-weight:400;">
                    Avoid the Risk of Homelessness from Today <br>
                </h1>
                <h4 data-aos="fade-up" data-aos-delay="1100" style="color:white;">
                    The number of Australian families facing homelessness is increasing. We provide a wide range of services such as cheaper housing options, early super access and mental health services.
                </h4>
                <div class="primary-btn mt-5" id="homeButton" style="background-color:#ff573d; color:white;" data-aos="zoom-in" data-aos-delay="1600" data-aos-offset="-100000">
                    <span style="font-weight:bold;">Know More ></span>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End banner Area =================-->

<!--================ Start Features Area =================-->
<section class="features-area section-gap-top" id="section1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section-title">
                    <h2>How <span>Can</span> We Help</h2>
                </div>
            </div>
        </div>
        <div class="row feature_inner">
            <div class="col-lg-4 col-md-12" data-aos="zoom-in-down" style="margin-bottom:2%">
                <div class="feature-item" style="height:100%; cursor:pointer" onclick="location.href='/Rent/Index'">
                    <div style="margin-bottom:20px;">
                        <img src="~/Content/images/rentIcon.png" />
                    </div>
                    <h4>Cheaper Rent Options</h4>
                    <p>
                        Complete this short questionnaire so that we can provide you with better renting options!
                    </p>
                    <br id="blocker1" style="display:none;" />
                    <div class="flip">
                        <p>
                            <div class="primary-btn mt-5" id="introButton">
                                <span style="font-weight:bold; text-decoration:underline">Find out more !</span>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12" data-aos="zoom-in-up" style="margin-bottom:2%">
                <div class="feature-item" style="height:100%; cursor:pointer" onclick="location.href='/Super/Index'">
                    <div style="margin-bottom:20px;">
                        <img src="~/Content/images/superIcon.png" />
                    </div>
                    <h4>Claim your super</h4>
                    <p>
                        The Australian government has provisions under which you can claim your super early. Are you eligible to claim yours early?
                    </p>
                    <br id="blocker" style="display:none;" />
                    <div class="flip">
                        <p>
                            <div class="primary-btn mt-5" id="introButton" >
                                <span style="font-weight:bold; text-decoration:underline">Find out more !</span>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12" data-aos="zoom-in-down" style="margin-bottom:2%">
                <div class="feature-item" style="height:100%; cursor:pointer" onclick="location.href='/Service/Index'">
                    <div style="margin-bottom:20px;">
                        <img src="~/Content/images/doctor.png" />
                    </div>
                    <h4>Mental Health Services</h4>
                    <p>
                        Do you want to find mental health services in and around your suburb ?
                        <br />
                        <br />
                    </p>
                    <div class="flip">
                        <p>
                            <div class="primary-btn mt-5" id="introButton">
                                <span style="font-weight:bold; text-decoration:underline">Find out more !</span>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
