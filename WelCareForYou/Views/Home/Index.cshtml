<script>
    document.getElementById("homeButton").addEventListener("click", smoothScrool);

    function smoothScrool() {
        document.getElementById('section1').scrollIntoView({
            behavior: 'smooth'
        });
    }

    AOS.init({
        once: true,
        //offset: 200,
        duration: 800,
        easing: 'ease-in-sine',
        delay: 100,
    });


    var width = screen.width;
    if (width >= 1600) {
        document.getElementById('homeBanner').style.marginTop = "20%";        
    }
    if (width <= 1200) {
        document.getElementById('blocker').style.display = "inline-block";
    }
    if (width <= 1200) {
        document.getElementById('blocker1').style.display = "inline-block";
    }
</script>